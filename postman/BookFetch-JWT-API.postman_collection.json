{
	"info": {
		"_postman_id": "bookfetch-jwt-api-collection",
		"name": "BookFetch JWT API",
		"description": "BookFetch API 服务的 JWT 认证和文章提取功能测试集合",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "bookfetch"
	},
	"item": [
		{
			"name": "认证相关",
			"item": [
				{
					"name": "1. 生成 JWT Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.success && jsonData.token) {",
									"        // 将 token 保存到环境变量",
									"        pm.environment.set('jwt_token', jsonData.token);",
									"        console.log('Token 已保存到环境变量');",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"test-user\",\n    \"expiresIn\": \"7d\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "生成 JWT token。Token 会自动保存到环境变量中，供后续请求使用。"
					},
					"response": []
				},
				{
					"name": "2. 验证 JWT Token",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/verify",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"verify"
							]
						},
						"description": "验证当前 JWT token 是否有效，返回 token 的 payload 信息。"
					},
					"response": []
				},
				{
					"name": "3. 生成 Token（仅用户ID）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"my-custom-user\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "仅指定用户 ID 生成 token，使用默认过期时间（7天）。"
					},
					"response": []
				},
				{
					"name": "4. 生成 Token（自定义过期时间）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"expiresIn\": \"1h\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "生成自定义过期时间的 token（例如：1h, 30m, 7d）。"
					},
					"response": []
				}
			],
			"description": "JWT token 的生成和验证相关 API"
		},
		{
			"name": "文章提取",
			"item": [
				{
					"name": "1. 提取文章内容（需要认证）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"url\": \"https://example.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/extract",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"extract"
							]
						},
						"description": "从指定 URL 提取文章内容。需要有效的 JWT token 进行认证。"
					},
					"response": []
				},
				{
					"name": "2. 提取文章内容（无 Token - 应失败）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"url\": \"https://example.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/extract",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"extract"
							]
						},
						"description": "测试未提供 token 时的错误响应（应返回 401）。"
					},
					"response": []
				},
				{
					"name": "3. 提取文章内容（无效 Token - 应失败）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer invalid-token-here",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"url\": \"https://example.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/extract",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"extract"
							]
						},
						"description": "测试无效 token 时的错误响应（应返回 401）。"
					},
					"response": []
				}
			],
			"description": "文章内容提取相关 API（需要 JWT 认证）"
		},
		{
			"name": "健康检查",
			"item": [
				{
					"name": "健康检查",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"health"
							]
						},
						"description": "检查服务器运行状态，无需认证。"
					},
					"response": []
				}
			],
			"description": "服务器健康检查端点"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	]
}

